<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pasho.osmjet" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/osm_logo"
        android:label="@string/app_name"
        android:theme="@style/ReconTheme" >
        <activity
            android:name="com.pasho.osmjet.MapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library android:name="com.reconinstruments.lib" />
        <uses-library android:name="com.reconinstruments.os" />
    </application>

</manifest>
