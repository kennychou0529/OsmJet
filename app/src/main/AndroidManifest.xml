<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.reconinstruments.connectivitydemo" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ReconTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FileDownloadActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".FileUploadActivity"
            android:label="@string/app_name" />

        <activity
            android:name=".ImageDownloadActivity"
            android:label="@string/app_name" />

        <uses-library android:name="com.reconinstruments.lib" />
        <uses-library android:name="com.reconinstruments.os" />
    </application>

</manifest>
